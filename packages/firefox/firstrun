#!/bin/bash

CONF="/etc/X11/xorg.conf"

if [ ! -f $CONF ]
then
	Xorg -configure &&
	sed -i 's@/dev/mouse@/dev/input/mice@' ~/xorg.conf.new &&
	mv ~/xorg.conf.new $CONF
fi

/usr/bin/firefox --display=:3 &
echo "Sleeping for 90 seconds to allow Firefox's firstrun to complete"
sleep 90
PID=`pidof Xorg`
if [ $PID -gt 0 ]
then
	kill $PID
fi
if [ -f $CONF ]
then
	rm $CONF
fi
return 0

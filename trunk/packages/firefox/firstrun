#!/bin/bash

if [ ! -f /etc/X11/xorg.conf ]
then
	Xorg -configure &&
	sed -i 's@/dev/mouse@/dev/input/mice@' ~/xorg.conf.new &&
	mv ~/xorg.conf.new /etc/X11/xorg.conf
fi

firefox --display=:3
echo "Sleeping for 90 seconds to allow Firefox's firstrun to complete"
sleep 90
PID=`pidof Xorg`
if [ $PID -gt 0 ]
then
	kill $PID
fi

#!/bin/sh

# this script runs before "console",
# thus translated error messages are not allowed

LC_ALL=C
export LC_ALL

. /etc/sysconfig/rc
. ${rc_functions}

case "${1}" in
	start)
		if [ ! -z "$BRLTTY" ] ; then
		  boot_mesg "Activating brltty..."
		  /usr/bin/brltty $BRLTTY
		  echo_ok
		fi
		;;
	*)
		echo "Usage: ${0} {start}"
		exit 1
		;;
esac
